{
  "name": "@verndale/front-end-components",
  "description": "Front end component library.",
  "license": "MIT",
  "version": "1.0.1-build",
  "main": "lib/main.js",
  "author": {
    "name": "Verndale",
    "email": "hello@verndale.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/verndale/front-end-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "build": "rimraf ./docs ./lib && yarn docs && gulp babel && gulp copy",
    "commit": "npx git-cz",
    "docs": "documentation build src/components/**/*.js -f html -g true -o docs",
    "lint": "eslint --fix --color --debug --ignore-path .eslintignore ./src/components/**/*.js",
    "sass": "node-sass src/components/preview.scss -o public/css",
    "check-format": "prettier --check \"src/**/*.js\"",
    "format-js": "prettier --write \"src/**/*.js\"",
    "start": "yarn svg && yarn sass && gulp",
    "release": "semantic-release",
    "svg": "svgo public/images/svg-sprites -o public/images && svg-sprite-generate -d public/images/svg-sprites -o public/images/svgsheet.svg"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@verndale/core": "1.1.3",
    "gsap": "3.7.1",
    "js-cookie": "2.2.1",
    "husky": "^7.0.1",
    "sass-mq": "5.0.1",
    "swiper": "6.7.0",
    "semantic-release": "17.4.4"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.14.8",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.14.8",
    "@babel/register": "7.14.5",
    "@frctl/fractal": "1.5.11",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "commitlint-plugin-function-rules": "1.3.2",
    "documentation": "13.2.5",
    "eslint": "7.31.0",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-util": "3.0.8",
    "merge-stream": "2.0.0",
    "node-sass": "6.0.1",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "svg-sprite-generator": "0.0.7",
    "svgo": "2.3.1",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "keywords": [
    "components",
    "accessible",
    "front end",
    "library"
  ]
}
